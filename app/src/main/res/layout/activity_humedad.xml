<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_humedad"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.adps.markintoch.ubidots.Humedad">

    <Button
        android:text="Ajuste de Humedad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/titulo"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:id="@+id/button"
        android:width="300dp"
        android:height="50dp" />

    <TextView
        android:text="Porcentaje de humedad general"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        android:id="@+id/textView2"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/hum"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button"
        android:id="@+id/imageView" />

    <TextView
        android:text="%"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:id="@+id/Humedad2"
        android:textSize="16sp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="______________________________________"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_below="@+id/Humedad2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <TextView
        android:text="Porcentaje de humedad de Tierra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        android:id="@+id/text"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/hum"
        android:layout_alignBottom="@+id/text"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button"
        android:id="@+id/imageView2" />

    <TextView
        android:text="%"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:id="@+id/HumedadTierra"
        android:textSize="16sp"
        android:layout_below="@+id/text"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="______________________________________"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView20"
        android:layout_below="@+id/HumedadTierra"
        android:layout_alignLeft="@+id/text"
        android:layout_alignStart="@+id/text" />

    <Button
        android:text="Ventilacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Ventilacion"
        android:width="130dp"
        android:drawableLeft="@drawable/air"
        android:background="@color/BotonVentilacion"
        android:layout_alignBaseline="@+id/Riego"
        android:layout_alignBottom="@+id/Riego"
        android:layout_alignEnd="@+id/button" />

    <Button
        android:text="Rociador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Riego"
        android:drawableLeft="@drawable/roc"
        android:textColor="#ffffff"
        android:background="@color/BotonRiego"
        android:width="120dp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/textView20"
        android:layout_alignStart="@+id/textView20" />

</RelativeLayout>
