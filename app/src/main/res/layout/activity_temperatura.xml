<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_temperatura"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.adps.markintoch.ubidots.Temperatura">

    <Button
        android:text="Ajuste de Temperatura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/titulo"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:id="@+id/button2"
        android:width="300dp"
        android:height="50dp" />

    <TextView
        android:text="Â°C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:id="@+id/Temperatura2"
        android:textSize="16sp"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_marginTop="36dp"
        android:id="@+id/textView4"
        android:text="Temperatura actual"
        android:layout_below="@+id/button2"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/temp"
        android:id="@+id/imageView2"
        android:layout_alignBottom="@+id/textView4"
        android:layout_toLeftOf="@+id/textView4"
        android:layout_toStartOf="@+id/textView4" />


    <TextView
        android:text="______________________________________"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView14"
        android:layout_marginRight="16dp"
        android:layout_below="@+id/Temperatura2"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Ventilacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Ventilacion2"
        android:width="130dp"
        android:drawableLeft="@drawable/air"
        android:background="@color/BotonVentilacion"
        android:layout_below="@+id/textView14"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp" />

</RelativeLayout>
